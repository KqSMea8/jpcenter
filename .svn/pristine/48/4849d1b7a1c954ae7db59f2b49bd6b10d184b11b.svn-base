* {
    box-sizing: border-box;
} 

.img-responsive {
    display: block;
    max-width: 100%;
    height: auto;
    margin-top: 3em;
}
h1 {
    /* font-weight: bold; */
    position: relative;
    margin-left: 2em;
    top: -54px;
    color: white;
    font-size: 30px;
    font-family: "Lemonada", sans-serif ;
}
@media only screen and (max-width: 767px) {
    .banner-bottom {
        bottom: -3px;
        margin-left: 0 !important;
        width: 100% !important;
        height: 40px;
        background-color: rgb(188, 0, 45);
        -webkit-transform: perspective(200px) rotateX(0deg); 
    }
    .banner .banner-bottom > img {
        display: none !important;
    }
    h1 {
        margin-left: 10px;
        font-size: 14px;
        margin-bottom: -34px;
    }
}
.banner-bottom {    
    width: 850px;
    height: 63px;   
    background-color: rgb(188, 0, 45);
    border-bottom-width:1px;
    -webkit-transform: perspective(200px) rotateX(-25deg);   
    transform-origin: top left; 
    margin-top: -45px;
    margin-left: -25px;
    /*opacity: 0.9;*/
} 

.container{
	margin-top: 2em;
}
.table td, .table th {
    padding: 0.75rem;
    vertical-align: top;
    border-top: 0px #dee2e6;
}
a{
    text-decoration: none;
	color: black;
    padding-top: 28px;
    padding-bottom: 0px;
}
a,a:visited{
    color: black;
    text-decoration:none;
}
a:hover{
    color:#dc3545;
    text-decoration: none;
}
.nav-link {
    font-size: 18px;
    display: block;
    font-family: 'Muli', sans-serif;
    font-stretch: 100%;
    padding: .5rem 1rem;
}
.nav-link.active {
    background-color: transparent;
    border-color: transparent;
    font-weight: 600;
}
.nav-link.nav-link:hover {
    color:#dc3545;
}
.nav-tabs .nav-link {
    border: 1px solid transparent;
    border-top-left-radius: .25rem;
    border-top-right-radius: .25rem;
}
.nav-link.active:hover {
    font-weight: 600 !important;
    color: inherit !important;
}
.section-title {
	font-size: 24px;
	font-weight: 800;
	padding: 28px 50px;
	background: url(/images/flower-icon-1.png) no-repeat;
	background-size: auto;
}

.breadcrumb {
    background-color: transparent;
    margin-top: -37px;
    font-size: 14px;
    margin-left: -1px;
    background-color: white;
    font-family: Muli, sans-serif;
}
li {
	list-style: none;
	display: inline-block;
}
.breadcrumb-item a{
	color: inherit;
	text-decoration: none;
}
.breadcrumb-item a:hover{
	color: red;
}
.breadcrumb .breadcrumb-item + .breadcrumb-item::before {
	content: ">";
}

.nav {
	box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}
.col-md-8{
	box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}