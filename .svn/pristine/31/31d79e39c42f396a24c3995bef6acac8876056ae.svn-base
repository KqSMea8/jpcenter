.carousel-indicators li {
    background: #a3a3a3;
    border-radius: 50%;
    width: 8px;
    height: 8px;
}

.carousel-indicators .active {
    background: #707070;
}
.row {
    width: 100%;
    height: 50px;
    margin: 0;
    margin: 15px auto;
}
#Carousel .carousel-inner {
    margin-top: -1em;
    margin-bottom: 14px;
}
img {
    height: 76px;
}
.carousel-item div {
    text-align:center;
}
.carousel-inner {
    position: relative;
    width: 100%;
    overflow: hidden;
}
.small {
    display: none;  
}
@media only screen and (max-width: 767px) {
    .carousel-inner .carousel-item {
        width: 100% !important;  
        display: none;    
    }
    img {
        height: 4em;
        width: 100%;
    }
    #Carousel .carousel-inner {
        margin-bottom: 10px;
    }
    .small {
        display: block;
    }
}