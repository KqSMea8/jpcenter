*, ::after, ::before {
    box-sizing: border-box;
}
* {
    box-sizing: border-box;
} 

.img-responsive {
    display: block;
    max-width: 100%;
    height: auto;
}
h1 {
    /* font-weight: bold; */
    position: relative;
    margin-left: 2em;
    top: -54px;
    color: white;
    font-size: 30px;
    font-family: "Lemonada", sans-serif ;
}
@media only screen and (max-width: 767px) {
    .banner-bottom {
        bottom: -3px;
        margin-left: 0 !important;
        width: 100% !important;
        height: 40px;
        background-color: rgb(188, 0, 45);
        -webkit-transform: perspective(200px) rotateX(0deg); 
    }
    .banner .banner-bottom > img {
        display: none !important;
    }
    h1 {
        margin-left: 10px;
        font-size: 14px;
        margin-bottom: -34px;
    }
}
.banner-bottom {    
    width: 850px;
    height: 63px;   
    background-color: rgb(188, 0, 45);
    border-bottom-width:1px;
    -webkit-transform: perspective(200px) rotateX(-25deg);   
    transform-origin: top left; 
    margin-top: -45px;
    margin-left: -25px;
    /*opacity: 0.9;*/
} 

.section-title {
    font-size: 24px;
    font-weight: 800;
    padding: 28px 50px;
    background: url(/assets/images/flower-icon-1.png) no-repeat;
    background-size: auto;
    
}
.course .course-block {
    height: initial;
    padding: 30px 20px;
    border: 0 #e5e5e5;
    background-color: #fff;
    color: #4c4c4c;
    min-height: 303px;
}
.course .course-block .card-title {
    line-height: 1.25;
    color: #000;
}
.course .course-block .course-description {
    line-height: 1.71;
    margin-top: 10px;
}
.read-more {
    color: #e11f26;
    font-size: 12px;
    font-weight: 600;
}
#japancenter{
	font-size: 17px;
}
ul, li {
    margin: 0;
    padding: 0;
}
ol, ul {
    list-style: none;
}
.course ul > li {
    display: flex;
    margin-bottom: 10px;
    line-height: 1.71;
}
li {
    list-style: none;
    display: inline-block;
    margin-bottom: 10px;

}
.course ul > li img {
    margin-right: 13px;
    margin-top: 4px;
}

a, a:hover, a:active, a:focus {
    color: inherit;
    text-decoration: none;
}
.card:hover {
    -webkit-box-shadow: 0 0 40px 0 rgba(0, 0, 0, 0.1);
    box-shadow: 0 0 40px 0 rgba(0, 0, 0, 0.1);
    -webkit-transform: translateY(-5px);
    -moz-transform: translateY(-5px);
    -ms-transform: translateY(-5px);
    -o-transform: translateY(-5px);
    transform: translateY(-5px);
    text-decoration: none;
}
.card{
    margin-bottom: 2em;
}


@media (min-width: 768px)
{
    .col-md-6 {
        -webkit-box-flex: 0;
        -ms-flex: 0 0 50%;
        flex: 0 0 50%;
        max-width: 50%;
    }
}
.container{
	margin-top: 2em;
}
a{
    padding: 1em 14px;
}
a,a:visited{
    color: black;
    text-decoration:none;
}
a, a:hover, a:active, a:focus {
    color: inherit;
    text-decoration: none;
}
.nav-link {
    font-size: 18px;
    display: block;
    font-family: 'Muli', sans-serif;
    line-height: normal;
    font-stretch: 100%;
}
.nav-link.active {
    background-color: transparent;
    border-color: transparent;
    font-weight: 600;
}
.nav-tabs .nav-link:hover {
	border-color: transparent;
}
.nav-link.nav-link:hover {
    color:#dc3545;
}
.nav-tabs .nav-link {
    border: 1px solid transparent;
    border-top-left-radius: .25rem;
    border-top-right-radius: .25rem;
}
.nav-link.active:hover {
    font-weight: 600 !important;
    color: inherit !important;
}

.breadcrumb {
    background-color: transparent;
    margin-top: -37px;
    font-size: 14px;
    margin-left: -1px;
    background-color: white;
    font-family: Muli, sans-serif;
}
li {
	list-style: none;
	display: inline-block;
}
.breadcrumb-item a{
    color: #000 !important;
    font-weight: 600;
}
.breadcrumb-item a:hover{
	color: red !important;
}
.breadcrumb-item a{
	color: inherit;
	text-decoration: none;
}
.breadcrumb .breadcrumb-item + .breadcrumb-item::before {
	content: ">";
}
.nav {
	box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}
.col-md-8{
	box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}
a{
	padding-top: 14px;
    padding-bottom: 14px;
}